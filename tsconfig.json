{
  "compilerOptions": {
    "target": "es5",                       
    "module": "commonjs",                   
    "outDir": "./dist",                       
    "strict": true,                         
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ], 
    "esModuleInterop": true,               
    "skipLibCheck": false,                     
    "forceConsistentCasingInFileNames": true,  
  },
  "include": [
    "./src",
    "./scripts/"
  ],
}
